@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - Shefaa</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="text-center">
            <i class="fas fa-lock fa-4x text-danger mb-4"></i>
            <h2 class="mb-3">Access Denied</h2>
            <p class="text-muted mb-4">You don't have permission to access this resource.</p>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Go to Dashboard
            </a>
        </div>
    </div>
</body>
</html>

