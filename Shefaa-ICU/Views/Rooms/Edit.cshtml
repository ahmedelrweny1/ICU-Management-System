@model Shefaa_ICU.Models.Room
@{
    ViewData["Title"] = "Edit Room";
    ViewData["PageTitle"] = "Edit Room";
    ViewData["ActivePage"] = "Rooms";
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Rooms</p>
        <h2>Edit Room</h2>
        <p class="page-subtitle">Update room information</p>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index", "Rooms")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card delay-1" data-animate>
    <div class="card-body">
        <form method="post" action="@Url.Action("Update", "Rooms", new { id = Model.ID })">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID" />

            <div class="mb-3">
                <label class="form-label" asp-for="Number">Room Number *</label>
                <input type="text" class="form-control" asp-for="Number" required />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Notes">Notes</label>
                <textarea class="form-control" asp-for="Notes" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Current Status</label>
                <input type="text" class="form-control" value="@Model.Status" readonly />
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Room
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

