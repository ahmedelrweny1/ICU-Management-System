@using Shefaa_ICU.Models
@{
    ViewData["Title"] = "Staff Management";
    ViewData["PageTitle"] = "Staff Management";
    ViewData["ActivePage"] = "Staff";
    ViewData["SearchInputId"] = "staffSearch";
    ViewData["SearchPlaceholder"] = "Search by name or ID...";
    
    var staff = ViewBag.Staff as IEnumerable<dynamic> ?? new List<dynamic>();
    var totalCount = staff.Count();
    var doctorCount = staff.Count(s => s.Role?.ToString() == "Doctor");
    var nurseCount = staff.Count(s => s.Role?.ToString() == "Nurse");
    var technicianCount = staff.Count(s => s.Role?.ToString() == "Technician");
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Team</p>
        <h2>Staff Management</h2>
        <p class="page-subtitle">Manage clinicians, roles, and attendance while keeping duty coverage balanced.</p>
    </div>
    <div class="page-actions">
        <a class="btn btn-soft btn-icon" asp-controller="Schedules" asp-action="Index">
            <i class="fas fa-calendar-check"></i>
            View Rotas
        </a>
        <button class="btn btn-primary btn-icon" type="button" data-bs-toggle="modal" data-bs-target="#addStaffModal">
            <i class="fas fa-plus"></i>
            Add New Staff
        </button>
    </div>
</div>

<div class="row g-3 filter-card-grid delay-2" data-animate>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn active" onclick="filterStaff('all', event)">
            <div class="filter-card-body">
                <span>All Staff</span>
                <small>Entire roster</small>
            </div>
            <span class="filter-card-count" id="allStaffCount">@totalCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-primary" onclick="filterStaff('Doctor', event)">
            <div class="filter-card-body">
                <span>Doctors</span>
                <small>Consultants</small>
            </div>
            <span class="filter-card-count" id="doctorCount">@doctorCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-success" onclick="filterStaff('Nurse', event)">
            <div class="filter-card-body">
                <span>Nurses</span>
                <small>Bedside care</small>
            </div>
            <span class="filter-card-count" id="nurseCount">@nurseCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-info" onclick="filterStaff('Technician', event)">
            <div class="filter-card-body">
                <span>Technicians</span>
                <small>Support</small>
            </div>
            <span class="filter-card-count" id="technicianCount">@technicianCount</span>
        </button>
    </div>
</div>

<div class="card delay-3" data-animate>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody id="staffTableBody">
                    @if (staff.Any())
                    {
                        @foreach (var member in staff)
                        {
                            <tr data-role="@member.Role">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="@(member.ProfilePhotoPath ?? $"https://ui-avatars.com/api/?name={member.Name}&background=random")"
                                             style="width: 40px; height: 40px; border-radius: 50%;" alt="@member.Name">
                                        <div>
                                            <strong>@member.Name</strong>
                                            @if (!string.IsNullOrEmpty(member.Specialty?.ToString()))
                                            {
                                                <div class="text-muted small">@member.Specialty</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-@(member.Role?.ToString() == "Doctor" ? "primary" : member.Role?.ToString() == "Nurse" ? "success" : "info")">
                                        @member.Role
                                    </span>
                                </td>
                                <td>
                                    <div>@(member.Email ?? "N/A")</div>
                                    <div class="text-muted small">@(member.PhoneNumber ?? "N/A")</div>
                                </td>
                                <td>
                                    <span class="badge bg-@(member.Status?.ToString() == "Active" ? "success" : "secondary")">
                                        @member.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary" onclick="editStaff(@member.ID)" data-tooltip="Edit Staff">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary" onclick="registerAttendance(@member.ID)" data-tooltip="Register Attendance">
                                            <i class="fas fa-clock"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <br>
                                No staff found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals {
    <div class="modal fade" id="addStaffModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Staff Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted">Staff management functionality is not yet implemented.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/staff.js" asp-append-version="true"></script>
}
