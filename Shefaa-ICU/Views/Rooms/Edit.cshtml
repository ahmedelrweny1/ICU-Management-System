@model Shefaa_ICU.Models.Room
@{
    ViewData["Title"] = "Edit Room";
    ViewData["PageTitle"] = "Edit Room";
    ViewData["ActivePage"] = "Rooms";

    var room = ViewBag.Room as Shefaa_ICU.Models.Room;
}

@if (room == null)
{
<div class="alert alert-danger">
    <h4>Room Not Found</h4>
    <p>The room you are looking for does not exist or has been removed.</p>
    <a href="@Url.Action("Index", "Rooms")" class="btn btn-primary">Back to Rooms List</a>
</div>
}
else
{
<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Rooms</p>
        <h2>Edit Room</h2>
        <p class="page-subtitle">Update room information</p>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index", "Rooms")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card delay-1" data-animate>
    <div class="card-body">
        <form method="post" action="@Url.Action("Update", "Rooms")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ID" value="@room.ID" />

            <div class="mb-3">
                <label class="form-label" for="Number">Room Number *</label>
                <input type="text" class="form-control" id="Number" name="Number" value="@room.Number" required />
                <span class="text-danger field-validation-valid" data-valmsg-for="Number" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Status">Room Status *</label>
                <select class="form-select" id="Status" name="Status" required>
                    <option value="0" selected="@(room.Status == RoomStatus.Available)">Available</option>
                    <option value="1" selected="@(room.Status == RoomStatus.Occupied)">Occupied</option>
                    <option value="2" selected="@(room.Status == RoomStatus.Cleaning)">Cleaning</option>
                </select>
                <span class="text-danger field-validation-valid" data-valmsg-for="Status" data-valmsg-replace="true"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" for="Notes">Notes</label>
                <textarea class="form-control" id="Notes" name="Notes" rows="3">@room.Notes</textarea>
            </div>

            @if (room.PatientID.HasValue)
                {
            <div class="alert alert-info">
                <div class="d-flex align-items-center">
                    <i class="fas fa-info-circle me-2"></i>
                    <div>
                        <strong>Currently Occupied By:</strong> @room.Patient?.Name
                        <br>
                        <small class="text-muted">To change patient assignment, go to the patient's edit page or use the evacuate function on the rooms list.</small>
                    </div>
                </div>
            </div>
                }

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "Rooms")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Room
                </button>
            </div>
        </form>
    </div>
</div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

