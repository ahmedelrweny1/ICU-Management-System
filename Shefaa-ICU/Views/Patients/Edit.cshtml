@model Shefaa_ICU.Models.Patient
@{
    ViewData["Title"] = "Edit Patient";
    ViewData["PageTitle"] = "Edit Patient";
    ViewData["ActivePage"] = "Patients";
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Patients</p>
        <h2>Edit Patient</h2>
        <p class="page-subtitle">Update patient information</p>
    </div>
    <div class="page-actions">
        <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card delay-1" data-animate>
    <div class="card-body">
        <form method="post" action="@Url.Action("Update", "Patients", new { id = Model.ID })">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Code" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label" asp-for="Name">Full Name *</label>
                    <input type="text" class="form-control" asp-for="Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label" asp-for="Age">Age *</label>
                    <input type="number" class="form-control" asp-for="Age" min="0" max="120" required />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label" asp-for="Gender">Gender *</label>
                    <select class="form-select" asp-for="Gender" required>
                        <option value="">Select</option>
                        <option value="0">Male</option>
                        <option value="1">Female</option>
                        <option value="2">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label" asp-for="RoomId">Room</label>
                    <select class="form-select" asp-for="RoomId">
                        <option value="">Select Room</option>
                        @if (ViewBag.AllRooms != null)
                        {
                            foreach (var room in ViewBag.AllRooms)
                            {
                                <option value="@room.ID" selected="@(Model.RoomId == room.ID)">@room.Number</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label" asp-for="Condition">Condition *</label>
                    <select class="form-select" asp-for="Condition" required>
                        <option value="">Select Condition</option>
                        <option value="Stable">Stable</option>
                        <option value="Moderate">Moderate</option>
                        <option value="Critical">Critical</option>
                    </select>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label" asp-for="AdmissionDate">Admission Date</label>
                    <input type="date" class="form-control" asp-for="AdmissionDate" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label" asp-for="EmergencyContact">Emergency Contact</label>
                    <input type="text" class="form-control" asp-for="EmergencyContact" placeholder="Name - Phone Number" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Complaint">Chief Complaint</label>
                <textarea class="form-control" asp-for="Complaint" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="MedicalHistory">Medical History</label>
                <textarea class="form-control" asp-for="MedicalHistory" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Diagnosis">Diagnosis</label>
                <textarea class="form-control" asp-for="Diagnosis" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Treatment">Treatment Plan</label>
                <textarea class="form-control" asp-for="Treatment" rows="2"></textarea>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Patient
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

