@using Shefaa_ICU.Models
@{
    ViewData["Title"] = "Staff Management";
    ViewData["PageTitle"] = "Staff Management";
    ViewData["ActivePage"] = "Staff";
    ViewData["SearchInputId"] = "staffSearch";
    ViewData["SearchPlaceholder"] = "Search by name or ID...";
    
    var staff = ViewBag.Staff as IEnumerable<dynamic> ?? new List<dynamic>();
    var totalCount = staff.Count();
    var doctorCount = staff.Count(s => s.Role?.ToString() == "Doctor");
    var nurseCount = staff.Count(s => s.Role?.ToString() == "Nurse");
    var technicianCount = staff.Count(s => s.Role?.ToString() == "Technician");
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Team</p>
        <h2>Staff Management</h2>
        <p class="page-subtitle">Manage clinicians, roles, and attendance while keeping duty coverage balanced.</p>
    </div>
    <div class="page-actions">
        <a class="btn btn-soft btn-icon" asp-controller="Schedules" asp-action="Index">
            <i class="fas fa-calendar-check"></i>
            View Rotas
        </a>
        <button class="btn btn-primary btn-icon" type="button" data-bs-toggle="modal" data-bs-target="#addStaffModal">
            <i class="fas fa-plus"></i>
            Add New Staff
        </button>
    </div>
</div>

<div class="row g-3 filter-card-grid delay-2" data-animate>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn active" onclick="filterStaff('all', event)">
            <div class="filter-card-body">
                <span>All Staff</span>
                <small>Entire roster</small>
            </div>
            <span class="filter-card-count" id="allStaffCount">@totalCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-primary" onclick="filterStaff('Doctor', event)">
            <div class="filter-card-body">
                <span>Doctors</span>
                <small>Consultants</small>
            </div>
            <span class="filter-card-count" id="doctorCount">@doctorCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-success" onclick="filterStaff('Nurse', event)">
            <div class="filter-card-body">
                <span>Nurses</span>
                <small>Bedside care</small>
            </div>
            <span class="filter-card-count" id="nurseCount">@nurseCount</span>
        </button>
    </div>
    <div class="col-xl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-info" onclick="filterStaff('Technician', event)">
            <div class="filter-card-body">
                <span>Technicians</span>
                <small>Support</small>
            </div>
            <span class="filter-card-count" id="technicianCount">@technicianCount</span>
        </button>
    </div>
</div>

<div class="card delay-3" data-animate>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody id="staffTableBody">
                    @if (staff.Any())
                    {
                        @foreach (var member in staff)
                        {
                            <tr data-role="@member.Role">
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="@(member.ProfilePhotoPath ?? $"https://ui-avatars.com/api/?name={member.Name}&background=random")"
                                             style="width: 40px; height: 40px; border-radius: 50%;" alt="@member.Name">
                                        <div>
                                            <strong>@member.Name</strong>
                                            @if (!string.IsNullOrEmpty(member.Specialty?.ToString()))
                                            {
                                                <div class="text-muted small">@member.Specialty</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-@(member.Role?.ToString() == "Doctor" ? "primary" : member.Role?.ToString() == "Nurse" ? "success" : "info")">
                                        @member.Role
                                    </span>
                                </td>
                                <td>
                                    <div>@(member.Email ?? "N/A")</div>
                                    <div class="text-muted small">@(member.PhoneNumber ?? "N/A")</div>
                                </td>
                                <td>
                                    <span class="badge bg-@(member.Status?.ToString() == "Active" ? "success" : "secondary")">
                                        @member.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", "Staff", new { id = member.ID })" data-tooltip="Edit Staff">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#attendanceModal" onclick="setStaffIdForAttendance(@member.ID)" data-tooltip="Register Attendance">
                                            <i class="fas fa-clock"></i>
                                        </button>
                                        <form method="post" action="@Url.Action("Delete", "Staff")" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this staff member?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@member.ID">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" data-tooltip="Delete Staff">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <br>
                                No staff found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Modals {
    <div class="modal fade" id="addStaffModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Staff Member</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" action="@Url.Action("Create", "Staff")">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="Name">Name *</label>
                                <input type="text" class="form-control" id="Name" name="Name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="Role">Role *</label>
                                <select class="form-select" id="Role" name="Role" required>
                                    <option value="">Select Role</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Nurse">Nurse</option>
                                    <option value="Technician">Technician</option>
                                    <option value="Administrator">Administrator</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="Username">Username</label>
                                <input type="text" class="form-control" id="Username" name="Username" placeholder="Auto-generated if left empty">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="Specialty">Specialty</label>
                                <input type="text" class="form-control" id="Specialty" name="Specialty" placeholder="e.g., Cardiology, ICU">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="Email">Email</label>
                                <input type="email" class="form-control" id="Email" name="Email">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="PhoneNumber">Phone Number</label>
                                <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Staff</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="attendanceModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Register Attendance</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="attendanceMessage">Select an action for this staff member.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <form method="post" action="@Url.Action("CheckIn", "Staff")" style="display: inline;" id="checkInForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="checkInStaffId" name="staffId">
                        <button type="submit" class="btn btn-success">Check In</button>
                    </form>
                    <form method="post" action="@Url.Action("CheckOut", "Staff")" style="display: inline;" id="checkOutForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="checkOutStaffId" name="staffId">
                        <button type="submit" class="btn btn-warning">Check Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function setStaffIdForAttendance(staffId) {
            document.getElementById('checkInStaffId').value = staffId;
            document.getElementById('checkOutStaffId').value = staffId;
        }
    </script>
    <script src="~/js/staff.js" asp-append-version="true"></script>
}
