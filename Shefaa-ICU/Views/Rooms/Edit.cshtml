@using Shefaa_ICU.Models
@{
    ViewData["Title"] = "Edit Room";
    ViewData["PageTitle"] = "Edit Room";
    ViewData["ActivePage"] = "Rooms";
    
    var room = ViewBag.Room as Room;
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Rooms</p>
        <h2>Edit Room</h2>
        <p class="page-subtitle">Update room information and status.</p>
    </div>
    <div class="page-actions">
        <a class="btn btn-soft btn-icon" asp-controller="Rooms" asp-action="Index">
            <i class="fas fa-arrow-left"></i>
            Back to Rooms
        </a>
    </div>
</div>

<div class="card delay-1" data-animate>
    <div class="card-body">
        @if (room != null)
        {
            <form method="post" action="@Url.Action("Update", "Rooms", new { id = room.ID })">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ID" value="@room.ID" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="Number">Room Number *</label>
                        <input type="text" class="form-control" id="Number" name="Number" value="@room.Number" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label" for="Status">Status *</label>
                        <select class="form-select" id="Status" name="Status" required>
                            @if (room.Status == RoomStatus.Available)
                            {
                                <option value="Available" selected>Available</option>
                            }
                            else
                            {
                                <option value="Available">Available</option>
                            }
                            @if (room.Status == RoomStatus.Occupied)
                            {
                                <option value="Occupied" selected>Occupied</option>
                            }
                            else
                            {
                                <option value="Occupied">Occupied</option>
                            }
                            @if (room.Status == RoomStatus.Cleaning)
                            {
                                <option value="Cleaning" selected>Cleaning</option>
                            }
                            else
                            {
                                <option value="Cleaning">Cleaning</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Notes">Notes</label>
                    <textarea class="form-control" id="Notes" name="Notes" rows="3">@room.Notes</textarea>
                </div>

                @if (room.Patient != null)
                {
                    <div class="alert alert-info">
                        <strong>Current Patient:</strong> @room.Patient.Name (@room.Patient.Condition)
                        <br>
                        <small>Changing status from Occupied to Available or Cleaning will remove the patient assignment.</small>
                    </div>
                }

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Room
                    </button>
                    <a class="btn btn-secondary" asp-controller="Rooms" asp-action="Index">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        }
        else
        {
            <div class="alert alert-danger">
                Room not found.
            </div>
            <a class="btn btn-secondary" asp-controller="Rooms" asp-action="Index">Back to Rooms</a>
        }
    </div>
</div>

