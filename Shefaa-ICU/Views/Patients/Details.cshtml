@using Shefaa_ICU.Models
@{
    ViewData["Title"] = "Patient Details";
    ViewData["PageTitle"] = "Patient Details";
    ViewData["ActivePage"] = "Patients";
    ViewData["HideSearch"] = true;
    
    var patient = ViewBag.PatientDetail as Patient;
    var patientId = ViewData["PatientId"] as int?;
}

<div class="page-header" data-animate>
    <div>
        <a class="btn btn-outline-secondary btn-sm mb-2" asp-controller="Patients" asp-action="Index">
            <i class="fas fa-arrow-left"></i> Back to Patients
        </a>
        <p class="page-eyebrow">Patient Overview</p>
        <h2>@(patient?.Name ?? "Patient Details")</h2>
        <p class="page-subtitle">Unified timeline of vitals, medications, and bedside notes for this admission.</p>
    </div>
    <div class="page-actions">
        <button class="btn btn-soft btn-icon" type="button" onclick="window.print()" data-tooltip="Print Patient Record">
            <i class="fas fa-print"></i>
            Print
        </button>
        <button class="btn btn-primary btn-icon" type="button" data-bs-toggle="modal" data-bs-target="#addNoteModal">
            <i class="fas fa-plus"></i>
            Add Clinical Note
        </button>
    </div>
</div>

@if (patient == null)
{
    <div class="alert alert-danger">
        <h4>Patient Not Found</h4>
        <p>The patient you are looking for does not exist or has been removed.</p>
        <a href="@Url.Action("Index", "Patients")" class="btn btn-primary">Back to Patients List</a>
    </div>
}
else
{
    var daysInICU = (DateTime.Now - patient.AdmissionDate).Days;
    var badgeClass = patient.Condition?.ToLower() switch
    {
        "critical" => "bg-danger",
        "moderate" => "bg-warning",
        "stable" => "bg-success",
        _ => "bg-secondary"
    };

<div class="card patient-header mb-4" data-animate>
    <div class="card-body">
        <div class="d-flex align-items-center">
            <img src="https://ui-avatars.com/api/?name=@patient.Name&background=random&size=100"
                 alt="@patient.Name" class="patient-avatar">
            <div class="ms-4 flex-grow-1">
                <h3>@patient.Name</h3>
                <div class="patient-meta">
                    <span><strong>ID:</strong> @patient.Code</span>
                    <span><strong>Age:</strong> @(patient.Age?.ToString() ?? "N/A") years</span>
                    <span><strong>Gender:</strong> @(patient.Gender?.ToString() ?? "N/A")</span>
                    <span><strong>Room:</strong> @(patient.Room?.Number ?? "N/A")</span>
                    <span><strong>Days in ICU:</strong> @daysInICU</span>
                </div>
                <div class="mt-2">
                    <span class="badge @badgeClass">@patient.Condition</span>
                </div>
            </div>
        </div>
    </div>
</div>

<ul class="nav nav-tabs mb-3 delay-1" id="patientTabs" data-animate>
    <li class="nav-item">
        <a class="nav-link active" data-bs-toggle="tab" href="#personalInfo">Personal Info</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#medicalHistory">Medical History</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#vitals">Vitals</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#medications">Medications</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-bs-toggle="tab" href="#notes">Clinical Notes</a>
    </li>
</ul>

<div class="tab-content delay-2" data-animate>
    <div class="tab-pane fade show active" id="personalInfo">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Full Name</label>
                        <p>@patient.Name</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="fw-bold">Age</label>
                        <p>@(patient.Age?.ToString() ?? "N/A")</p>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="fw-bold">Patient ID</label>
                        <p>@patient.Code</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Room Number</label>
                        <p>@(patient.Room?.Number ?? "N/A")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Status</label>
                        <p><span class="badge @badgeClass">@patient.Condition</span></p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Admission Date</label>
                        <p>@patient.AdmissionDate.ToString("MMM dd, yyyy")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Emergency Contact</label>
                        <p>@(patient.EmergencyContact ?? "N/A")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="medicalHistory">
        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label class="fw-bold">Chief Complaint</label>
                    <p>@(patient.Complaint ?? "N/A")</p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Medical History</label>
                    <p>@(patient.MedicalHistory ?? "N/A")</p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Diagnosis</label>
                    <p>@(patient.Diagnosis ?? "N/A")</p>
                </div>
                <div class="mb-3">
                    <label class="fw-bold">Treatment Plan</label>
                    <p>@(patient.Treatment ?? "N/A")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="vitals">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Vital Signs</h5>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#updateVitalsModal">
                    <i class="fas fa-plus"></i> Record Vitals
                </button>
            </div>
            <div class="card-body">
                @if (patient.Vitals != null && patient.Vitals.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Time</th>
                                    <th scope="col">BP</th>
                                    <th scope="col">Temperature</th>
                                    <th scope="col">Pulse</th>
                                    <th scope="col">SpO2</th>
                                    <th scope="col">Respiratory Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var vital in patient.Vitals.OrderByDescending(v => v.RecordedAt).Take(20))
                                {
                                    <tr>
                                        <td>@vital.RecordedAt.ToString("MMM dd, HH:mm")</td>
                                        <td>@(vital.BP ?? $"{vital.BloodPressureSystolic}/{vital.BloodPressureDiastolic}")</td>
                                        <td>@(vital.Temperature?.ToString("F1") ?? "N/A")°F</td>
                                        <td>@(vital.Pulse?.ToString() ?? "N/A") bpm</td>
                                        <td>@(vital.SpO2?.ToString() ?? "N/A")%</td>
                                        <td>@(vital.RespiratoryRate?.ToString() ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No vital signs recorded yet</p>
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="medications">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Medications</h5>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addMedicationModal">
                    <i class="fas fa-plus"></i> Add Medication
                </button>
            </div>
            <div class="card-body">
                @if (patient.Medications != null && patient.Medications.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Medication</th>
                                    <th scope="col">Dose</th>
                                    <th scope="col">Frequency</th>
                                    <th scope="col">Scheduled Time</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Administered By</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var med in patient.Medications.OrderByDescending(m => m.ScheduledTime ?? DateTime.MinValue))
                                {
                                    <tr>
                                        <td>@med.Name</td>
                                        <td>@(med.Dose ?? "N/A")</td>
                                        <td>@(med.Frequency ?? "N/A")</td>
                                        <td>@(med.ScheduledTime?.ToString("MMM dd, HH:mm") ?? "Not set")</td>
                                        <td><span class="badge bg-@(med.Status.ToString() == "Given" ? "success" : med.Status.ToString() == "Cancelled" ? "danger" : "warning")">@med.Status</span></td>
                                        <td>@(med.Staff?.Name ?? "N/A")</td>
                                        <td>
                                            @if (med.Status != MedicationStatus.Given && med.Status != MedicationStatus.Cancelled)
                                            {
                                                <form method="post" action="@Url.Action("MarkGiven", "Medications", new { id = med.Id })" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        <i class="fas fa-check"></i> Mark Given
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No medications assigned</p>
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="notes">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Clinical Notes</h5>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addNoteModal">
                    <i class="fas fa-plus"></i> Add Note
                </button>
            </div>
            <div class="card-body">
                @if (patient.ClinicalNotes != null && patient.ClinicalNotes.Any())
                {
                    <div class="notes-timeline">
                        @foreach (var note in patient.ClinicalNotes.OrderByDescending(n => n.Timestamp))
                        {
                            <div class="note-item">
                                <div class="note-header">
                                    <strong>@(note.Staff?.Name ?? "Staff")</strong>
                                    <span class="text-muted">@note.Timestamp.ToString("MMM dd, yyyy HH:mm")</span>
                                </div>
                                <div class="note-content">
                                    @note.Text
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-4">No clinical notes yet</p>
                }
            </div>
        </div>
    </div>
</div>
}

@section Modals {
@if (patient != null)
{
    <div class="modal fade" id="updateVitalsModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Vital Signs</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" action="@Url.Action("UpdateVitals", "Patients")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PatientID" value="@patient.ID" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label" for="BP">Blood Pressure</label>
                            <input type="text" class="form-control" id="BP" name="BP" placeholder="120/80">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Temperature">Temperature (°F)</label>
                            <input type="number" step="0.1" class="form-control" id="Temperature" name="Temperature" placeholder="98.6">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Pulse">Pulse Rate (bpm)</label>
                            <input type="number" class="form-control" id="Pulse" name="Pulse" placeholder="72">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="SpO2">SpO2 (%)</label>
                            <input type="number" class="form-control" id="SpO2" name="SpO2" placeholder="98">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="RespiratoryRate">Respiratory Rate</label>
                            <input type="number" class="form-control" id="RespiratoryRate" name="RespiratoryRate" placeholder="16">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addMedicationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Medication</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" action="@Url.Action("Create", "Medications")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PatientId" value="@patient.ID" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label" for="Name">Medication Name *</label>
                            <input type="text" class="form-control" id="Name" name="Name" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Dose">Dose</label>
                            <input type="text" class="form-control" id="Dose" name="Dose">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Frequency">Frequency</label>
                            <input type="text" class="form-control" id="Frequency" name="Frequency">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="ScheduledTime">Scheduled Time</label>
                            <input type="datetime-local" class="form-control" id="ScheduledTime" name="ScheduledTime">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Medication</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addNoteModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Clinical Note</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" action="@Url.Action("AddNote", "Patients")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PatientID" value="@patient.ID" />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label" for="Text">Note *</label>
                            <textarea class="form-control" id="Text" name="Text" rows="5" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Note</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
}

@section Scripts {
    <script src="~/js/patient-detail.js" asp-append-version="true"></script>
}
