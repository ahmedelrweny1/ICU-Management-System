@{
    ViewData["Title"] = "Room Management";
    ViewData["PageTitle"] = "Room Management";
    ViewData["ActivePage"] = "Rooms";
    ViewData["SearchInputId"] = "roomSearch";
    ViewData["SearchPlaceholder"] = "Search by room or patient...";
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Rooms</p>
        <h2>Room Management</h2>
        <p class="page-subtitle">Monitor availability, turn rooms faster, and keep isolation beds ready.</p>
    </div>
    <div class="page-actions">
        <a class="btn btn-soft btn-icon" asp-controller="Reports" asp-action="Index">
            <i class="fas fa-bed"></i>
            Occupancy Report
        </a>
        <button class="btn btn-primary btn-icon" type="button" onclick="addRoom()">
            <i class="fas fa-plus"></i>
            Add Room
        </button>
    </div>
    @* Data: addRoom should open modal with Room form *@
</div>

<div class="row g-3 filter-card-grid delay-1" data-animate>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn active" onclick="filterRooms('all')">
            <div class="filter-card-body">
                <span>All Rooms</span>
                <small>Full inventory</small>
            </div>
            <span class="filter-card-count" id="allRoomsCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-success" onclick="filterRooms('Available')">
            <div class="filter-card-body">
                <span>Available</span>
                <small>Ready for admission</small>
            </div>
            <span class="filter-card-count" id="availableCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-danger" onclick="filterRooms('Occupied')">
            <div class="filter-card-body">
                <span>Occupied</span>
                <small>In use</small>
            </div>
            <span class="filter-card-count" id="occupiedCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-warning" onclick="filterRooms('Cleaning')">
            <div class="filter-card-body">
                <span>Cleaning</span>
                <small>Turnover in progress</small>
            </div>
            <span class="filter-card-count" id="cleaningCount">0</span>
        </button>
    </div>
</div>

<div class="rooms-grid delay-2" id="roomsGrid" data-animate>
    @* Data: cards per room with patient details *@
</div>

@section Modals {
    <div class="modal fade" id="assignPatientModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Patient to Room <span id="assignRoomNumber"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="assignPatientForm">
                        <div class="mb-3">
                            <label class="form-label">Select Patient *</label>
                            <select class="form-select" id="selectPatient" required>
                                <option value="">Choose a patient...</option>
                                @* Data: populate with unassigned patients *@
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="confirmAssignPatient()">Assign</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/rooms.js" asp-append-version="true"></script>
}

