@using System
@using System.Text.Json

@{
    ViewData["Title"] = "Room Management";
    ViewData["PageTitle"] = "Room Management";
    ViewData["ActivePage"] = "Rooms";
    ViewData["SearchInputId"] = "roomSearch";
    ViewData["SearchPlaceholder"] = "Search by room or patient...";

    var roomsJson = JsonSerializer.Serialize(ViewBag.Rooms ?? Array.Empty<object>());
    var unassignedPatientsJson = JsonSerializer.Serialize(ViewBag.UnassignedPatients ?? Array.Empty<object>());
}

<div class="page-header" data-animate>
    <div>
        <p class="page-eyebrow">Rooms</p>
        <h2>Room Management</h2>
        <p class="page-subtitle">Monitor availability, turn rooms faster, and keep isolation beds ready.</p>
    </div>
    <div class="page-actions">
        <a class="btn btn-soft btn-icon" asp-controller="Reports" asp-action="Index">
            <i class="fas fa-bed"></i>
            Occupancy Report
        </a>
        <button class="btn btn-primary btn-icon" type="button" onclick="addRoom()">
            <i class="fas fa-plus"></i>
            Add Room
        </button>
    </div>
    @* Data: addRoom should open modal with Room form *@
</div>

<div class="row g-3 filter-card-grid delay-1" data-animate>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn active" onclick="filterRooms('all', event)">
            <div class="filter-card-body">
                <span>All Rooms</span>
                <small>Full inventory</small>
            </div>
            <span class="filter-card-count" id="allRoomsCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-success" onclick="filterRooms('Available', event)">
            <div class="filter-card-body">
                <span>Available</span>
                <small>Ready for admission</small>
            </div>
            <span class="filter-card-count" id="availableCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-danger" onclick="filterRooms('Occupied', event)">
            <div class="filter-card-body">
                <span>Occupied</span>
                <small>In use</small>
            </div>
            <span class="filter-card-count" id="occupiedCount">0</span>
        </button>
    </div>
    <div class="col-xxl-2 col-md-3 col-sm-6">
        <button type="button" class="filter-card filter-btn variant-warning" onclick="filterRooms('Cleaning', event)">
            <div class="filter-card-body">
                <span>Cleaning</span>
                <small>Turnover in progress</small>
            </div>
            <span class="filter-card-count" id="cleaningCount">0</span>
        </button>
    </div>
</div>

<div class="rooms-grid delay-2" id="roomsGrid" data-animate>
    @if (ViewBag.Rooms != null)
    {
        foreach (var room in ViewBag.Rooms)
        {
            var statusClass = room.Status.ToString() switch
            {
                "Available" => "room-card-available",
                "Occupied" => "room-card-occupied",
                "Cleaning" => "room-card-cleaning",
                _ => "room-card-available"
            };

            var statusIcon = room.Status.ToString() switch
            {
                "Available" => "fa-bed",
                "Occupied" => "fa-procedures",
                "Cleaning" => "fa-broom",
                _ => "fa-bed"
            };

    <div class="room-card @statusClass" data-status="@room.Status">
        <div class="room-card-header">
            <div class="room-number">@room.Number</div>
            <div class="room-status">
                <i class="fas @statusIcon"></i>
                <span>@room.Status</span>
            </div>
        </div>

        <div class="room-card-body">
            @if (room.Status.ToString() == "Occupied" )
                    {
            <div class="patient-info">
                <div class="patient-name">@room.PatientName</div>
                <div class="patient-condition">
                    <span class="condition-badge @(room.PatientCondition?.ToLower() ?? "")">
                        @room.PatientCondition
                    </span>
                </div>
                <div class="patient-meta">
                    <small>Room @room.Number</small>
                </div>
            </div>
                    }
                    else
                    {
            <div class="room-empty">
                <i class="fas fa-door-open"></i>
                <span>Available for admission</span>
            </div>
                    }
        </div>

        <div class="room-card-footer">
            @if (room.Status.ToString() == "Available")
                    {
            <button class="btn btn-sm btn-success" onclick="assignPatient(@room.ID)">
                <i class="fas fa-user-plus"></i> Assign
            </button>
            <button class="btn btn-sm btn-outline-secondary" onclick="editRoom(@room.ID)">
                <i class="fas fa-edit"></i>
            </button>
            <button class="btn btn-sm btn-outline-danger" onclick="deleteRoom(@room.ID)">
                <i class="fas fa-trash"></i>
            </button>
                    }
                    else if (room.Status.ToString() == "Occupied")
                    {
            <button class="btn btn-sm btn-danger" onclick="evacuateRoom(@room.ID)">
                <i class="fas fa-user-minus"></i> Evacuate
            </button>
            if (room.PatientId != null)
{
            <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "Patients", new { id = room.PatientId })">
                <i class="fas fa-eye"></i> View
            </a>
}
            <button class="btn btn-sm btn-outline-secondary" onclick="editRoom(@room.ID)">
                <i class="fas fa-edit"></i>
            </button>
                    }
                    else if (room.Status.ToString() == "Cleaning")
                    {
            <button class="btn btn-sm btn-success" onclick="markRoomAvailable(@room.ID)">
                <i class="fas fa-check"></i> Available
            </button>
            <button class="btn btn-sm btn-outline-secondary" onclick="editRoom(@room.ID)">
                <i class="fas fa-edit"></i>
            </button>
            <button class="btn btn-sm btn-outline-danger" onclick="deleteRoom(@room.ID, '@room.Number')">
                <i class="fas fa-trash"></i>
            </button>
                    }
        </div>

        @if (!string.IsNullOrEmpty(room.Notes))
                {
        <div class="room-notes">
            <small class="text-muted">@room.Notes</small>
        </div>
                }
    </div>
        }
    }
    else
    {
    <div class="col-12 text-center py-5">
        <i class="fas fa-door-closed fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No Rooms Found</h4>
        <p class="text-muted">Add your first room to get started.</p>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoomModal">
            <i class="fas fa-plus"></i> Add Room
        </button>
    </div>
    }
</div>

@section Modals {
    <div class="modal fade" id="assignPatientModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Patient to Room <span id="assignRoomNumber"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="assignPatientForm">
                        <div class="mb-3">
                            <label class="form-label">Select Patient *</label>
                            <select class="form-select" id="selectPatient" required>
                                <option value="">Choose a patient...</option>
                                @* Data: populate with unassigned patients *@
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="confirmAssignPatient()">Assign</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        window.roomsData = @Html.Raw(roomsJson);
        window.unassignedPatientsData = @Html.Raw(unassignedPatientsJson);
    </script>
    <script src="~/js/rooms.js" asp-append-version="true"></script>
}

